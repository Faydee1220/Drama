<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
        name="drama"
        type="com.rq.drama.model.Drama"/>
  </data>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_drama_list"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1000:1404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_live_tv_black"
        />
    <TextView
        android:id="@+id/textView_drama_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:text="@{drama.name}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_drama_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="致我們單純的小美好"
        />
    <TextView
        android:id="@+id/textView_drama_list_created_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_drama_list_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_drama_list_name"
        tools:text="出版時間：2017-11-23"
        />
    <TextView
        android:id="@+id/textView_drama_list_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_drama_list_start"
        app:layout_constraintTop_toTopOf="@+id/imageView_drama_list_start"
        tools:text="4.5"
        />
    <ImageView
        android:id="@+id/imageView_drama_list_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView_drama_list_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_drama_list_created_at"
        app:srcCompat="@drawable/ic_star"
        />
  </android.support.constraint.ConstraintLayout>
</layout>
